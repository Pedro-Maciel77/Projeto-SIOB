generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int          @id @default(autoincrement())
  nome        String
  email       String       @unique
  cpf         String       @unique
  senha       String
  cargo       String       @default("Operador")
  matricula   String?
  unidade     String?
  criadoEm    DateTime     @default(now())
  ocorrencias Ocorrencia[]
  auditorias  Auditoria[]
  relatorios  Relatorio[]
}

model Ocorrencia {
  id             Int      @id @default(autoincrement())
  tipo           String
  dataOcorrencia DateTime
  local          String
  status         String   @default("Aberta")
  descricao      String?
  responsavel    Usuario? @relation(fields: [responsavelId], references: [id])
  responsavelId  Int?
}

model Auditoria {
  id         Int      @id @default(autoincrement())
  usuario    Usuario? @relation(fields: [usuarioId], references: [id])
  usuarioId  Int?
  evento     String
  descricao  String?
  dataEvento DateTime @default(now())
}

model Relatorio {
  id          Int      @id @default(autoincrement())
  usuario     Usuario? @relation(fields: [usuarioId], references: [id])
  usuarioId   Int?
  filtros     Json?
  dataGeracao DateTime @default(now())
}
